<%- include ('templates/header') %>

<body>
    <h1 class="text-center"><%= titulo %></h1>
    <div class="col-xs-8 col-xs-offset-2 container">
        <form method="post" role="form">
            <div class="row mb-3">
                <label for="title">Titulo</label>
                <input type="text" id="title" name="title" placeholder="Ingrese un titulo" class="form-control font-monospace" required>
            </div>
            <div class="row mb-3">
                <label for="body">Texto</label>
                <textarea id="body" name="body" rows="3" class="form-control font-monospace" placeholder="Ingrese texto" required></textarea>
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <input type="submit" value="Ingresar nota" class="btn btn-success me-md-2">
            </div>
        </form>
    </div>
    
</body>

<%- include ('templates/footer') %>